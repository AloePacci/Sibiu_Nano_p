<launch>
    <arg name="waves" default="false"/>



    <!-- lanzamos el mundo  -->    
    <group if="$(arg waves)">
        <include file="$(find uuv_gazebo_worlds)/launch/ocean_waves.launch"/>
    </group>
    <group unless="$(arg waves)">
        
        <include file="$(find uuv_gazebo_worlds)/launch/empty_underwater_world.launch"/>
    </group>
    
<!-- lanzamos el robot -->

    <include file="$(find uuv_descriptions)/launch/sibiu_v0.launch"/>
 

    <!-- activamos el gestor de los actuadores/propulsores -->

    <include file="$(find uuv_thruster_manager)/launch/thruster_manager.launch" > 
    <arg name="model_name" value="rexrov"/>
    </include>
     
 
</launch>
